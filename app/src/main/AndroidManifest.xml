<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ripka.deutschwiederholung">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.ripka.deutschwiederholung.RipkaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.ripka.deutschwiederholung.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ripka.deutschwiederholung.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.ripka.deutschwiederholung.NounsActivity"
            android:label="@string/title_activity_nouns_all"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ripka.deutschwiederholung.NounsA1Activity"
            android:label="@string/title_activity_nouns_a1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ripka.deutschwiederholung.NounsA2Activity"
            android:label="@string/title_activity_nouns_a2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ripka.deutschwiederholung.GrammatikA1Activity"
            android:label="@string/title_activity_grammatik"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ripka.deutschwiederholung.GrammatikA2Activity"
            android:label="@string/title_activity_grammatik"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ripka.deutschwiederholung.VerbsActivity"
            android:label="@string/title_activity_verbs_all"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ripka.deutschwiederholung.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>
</manifest>