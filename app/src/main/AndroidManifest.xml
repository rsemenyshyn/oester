<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="ripka.deutschwiederholung">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="RipkaApp">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".NounsActivity"
            android:label="@string/title_activity_nouns_all"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".NounsA1Activity"
            android:label="@string/title_activity_nouns_a1"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".NounsB1Activity"
            android:label="@string/title_activity_nouns_b1"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".VerbsActivity"
            android:label="@string/title_activity_verbs_all"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>
</manifest>