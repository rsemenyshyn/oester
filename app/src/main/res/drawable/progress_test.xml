<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="270" >
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="25"
        android:useLevel="false" >
        <size
            android:height="100dip"
            android:width="100dip" />
        <gradient
            android:angle="180"
            android:startColor="@color/colorProgressStart"
            android:centerColor="@color/colorProgressCenter"
            android:endColor="@color/colorProgressEnd"
            android:centerX="0.5"
            android:centerY="0.5"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>